<h2>New trial</h2>
<%= if @changeset.action do %> <div class="alert alert-danger">
    <p>Something went wrong! Please check the errors below.</p>
  </div>
<% end %>
<%= form_for @changeset, Routes.trial_path(@conn, :create), fn f -> %>
  <div>
    <%= text_input f, :name, placeholder: "Name" %>
    <%= error_tag f, :name %> 
  </div>

  <%= select f, :championship_id, get_championship_options(@championships) %>
  <%= error_tag f, :championship_id %> 
  <%= submit "Create Trial" %> 
<% end %>